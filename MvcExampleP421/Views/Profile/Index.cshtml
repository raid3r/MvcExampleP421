@model User
@{
    ViewData["Title"] = "Профіль користувача";
}


<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">

        <div class="card">
            <div class="card-body">

                <table class="table">
                    <tbody>
                        @if (Model.ImageFile != null)
                        {
                            <tr>
                                <td colspan="2">
                                    <img src="@Model.ImageFile.Src" class="img-thumbnail rounded" />
                                </td>
                            </tr>
                        }
                        
                        <tr>
                            <th>Id</th>
                            <td>@Model.Id</td>
                        </tr>
                        <tr>
                            <th>UserName</th>
                            <td>@Model.UserName</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th>PhoneNumber</th>
                            <td>@Model.PhoneNumber</td>
                        </tr>
                    </tbody>
                </table>

            </div>
            <div class="card-footer">
                <a asp-action="Edit" asp-controller="Profile" class="btn btn-success">
                    Редагувати
                </a>
            </div>
        </div>



    </div>
</div>
