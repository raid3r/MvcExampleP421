@model LoginForm
@{
    ViewData["Title"] = "Вхід";
}

<div class="row">
    <div class="col-md-12">

        <div class="d-flex justify-content-center align-items-center" style="min-height: 80vh">

            <div style="min-width: 350px;">
                <div class="card" style="-webkit-box-shadow: 4px 4px 8px 0px rgba(34, 60, 80, 0.2);
-moz-box-shadow: 4px 4px 8px 0px rgba(34, 60, 80, 0.2);
box-shadow: 4px 4px 8px 0px rgba(34, 60, 80, 0.2);">
                    <div class="card-body">
                        <h5 class="card-title">@ViewData["Title"]</h5>

                        <form method="post" enctype="multipart/form-data" class="mt-3">
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group mt-3 d-flex g-1 justify-content-between">

                                <button type="submit" class="btn btn-primary">
                                    Увійти
                                </button>

                                <a asp-controller="Account" asp-action="Register"
                                   asp-route-returnUrl="@Context.Request.Query["returnUrl"]" class="btn btn-secondary">
                                    Зареєструватися
                                </a>
                            </div>
                        </form>


                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



