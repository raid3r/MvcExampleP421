@{
}

<h1 class="mb-4 text-center">Sales Dashboard</h1>

<!-- Summary Cards -->
<div class="row g-4 mb-5">
    <div class="col-md-4">
        <div class="card text-center h-100">
            <div class="card-body">
                <h5 class="card-title">Total Products</h5>
                <p class="card-text display-6">@Model.TotalProducts</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center h-100">
            <div class="card-body">
                <h5 class="card-title">Total Categories</h5>
                <p class="card-text display-6">@Model.TotalCategories</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center h-100">
            <div class="card-body">
                <h5 class="card-title">Total Sales</h5>
                <p class="card-text display-6">$@Model.TotalSales.ToString("N2")</p>
            </div>
        </div>
    </div>
</div>

<!-- Category Sales Table -->
<h2 class="mb-3">Category Sales</h2>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Category</th>
                <th>Sale Count</th>
                <th>Total Sales Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.CategorySales)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.SaleCount</td>
                    <td>$@category.TotalSalesAmount.ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>
</div>