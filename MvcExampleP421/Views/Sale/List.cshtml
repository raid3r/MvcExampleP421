@model Product

@{
    ViewData["Title"] = "Продажі продукта: " + Model.Name;
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            @if (Model.ImageFile != null)
            {
                <img src="@Model.ImageFile.Src" class="card-img-top" alt="@Model.Name">
            }
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <h6 class="card-subtitle mb-2 text-muted">Ціна: @Model.Price</h6>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Дата</th>
                    <th>Кількість</th>
                    <th>Ціна</th>
                    <th>Загальна сума</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Sales)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.SaleDate.ToString("HH:mm dd.MM.yyyy")</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price</td>
                        <td>@(item.Price* item.Quantity)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


